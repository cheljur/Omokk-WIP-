<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.utep.cs.cs4330.hw3.omok">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="edu.utep.cs.cs4330.hw3.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- OMOK ACTIVITY BOARD -->
        <activity
            android:name="edu.utep.cs.cs4330.hw3.activities.OmokActivity"
            android:label="@string/app_name"
            android:parentActivityName="edu.utep.cs.cs4330.hw3.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.utep.cs.cs4330.hw3.activities.MainActivity" />
        </activity>

        <!-- ENTER INFO ACTIVITY -->
        <activity
            android:name="edu.utep.cs.cs4330.hw3.activities.EnterInfoActivity"
            android:label="@string/app_name"
            android:parentActivityName="edu.utep.cs.cs4330.hw3.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.utep.cs.cs4330.hw3.activities.MainActivity" />
        </activity>
        <activity android:name="edu.utep.cs.cs4330.hw3.activities.SettingsActivity"></activity>
    </application>

</manifest>
